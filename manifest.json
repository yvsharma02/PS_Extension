{
    "name": "BITS PS2 Helper",
    "description": "Sort, Explore and Share PS2 Preferences with ease!",
    "version": "1",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/icon.png"
    },

    "content_scripts": [
      {
        "js": ["content.js", "public/xlsx.full.min.js"],
        "matches": [
          "https://psms-web.azureedge.net/*"
        ]
      }
    ],

    "web_accessible_resources": [
      {
        "resources": [ "/assets/*" ],
        "matches": [
          "https://psms-web.azureedge.net/*"
        ]
      }
    ]
}