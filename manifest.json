{
    "name": "PS Extension",
    "description": "Export PS Preferences",
    "version": "0.1",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/icon.png"
    },

    "content_scripts": [
      {
        "js": ["content.js", "public/xlsx.full.min.js"],
        "matches": [
          "https://psms-web.azureedge.net/stationpreference/selectpreference"
        ]
      }
    ],

    "web_accessible_resources": [
      {
        "resources": [ "/assets/*" ],
        "matches": [
          "https://psms-web.azureedge.net/*"
        ]
      }
    ],

    "permissions": ["tabs", "<all_urls>"]
}